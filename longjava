        // æ ¼å¼åŒ–æ—¥æœŸæ—¶é—´ä¸ºæœ¬åœ°æ—¥æœŸæ—¶é—´å­—ç¬¦ä¸²
        function formatDateTimeLocal(date) {
            const year = date.getFullYear();
            const month = String(date.getMonth() + 1).padStart(2, '0');
            const day = String(date.getDate()).padStart(2, '0');
            const hours = String(date.getHours()).padStart(2, '0');
            const minutes = String(date.getMinutes()).padStart(2, '0');
            
            return `${year}-${month}-${day}T${hours}:${minutes}`;
        }
        
        // ä¿å­˜è®°å½•
        function saveRecord() {
            const userName = document.getElementById('userName').value;
            const deviceType = document.getElementById('deviceType').value;
            const purpose = document.getElementById('purpose').value;
            const startTime = new Date(document.getElementById('startTime').value);
            const endTime = new Date(document.getElementById('endTime').value);
            
            // éªŒè¯æ—¶é—´
            if (endTime <= startTime) {
                alert('ç»“æŸæ—¶é—´å¿…é¡»æ™šäºå¼€å§‹æ—¶é—´ï¼');
                return;
            }
            
            // è®¡ç®—æ—¶é•¿ï¼ˆå°æ—¶ï¼‰
            const duration = ((endTime - startTime) / (1000 * 60 * 60)).toFixed(2);
            
            // è®¡ç®—ç§¯åˆ†
            const points = POINTS_RULES[purpose] || 0.5;
            
            const record = {
                id: Date.now(),
                user: userName,
                device: deviceType,
                purpose: purpose,
                startTime: startTime.toLocaleString('zh-CN'),
                endTime: endTime.toLocaleString('zh-CN'),
                duration: duration,
                points: points,
                date: startTime.toISOString().split('T')[0]
            };
            
            records.unshift(record);
            localStorage.setItem('deviceRecords', JSON.stringify(records));
            
            // æ›´æ–°ç”¨æˆ·ç§¯åˆ†
            if (!pointsData.users[userName]) {
                pointsData.users[userName] = 0;
            }
            pointsData.users[userName] += points;
            localStorage.setItem('pointsData', JSON.stringify(pointsData));
            
            displayRecentRecords();
            displayAllRecords();
            updateStats();
            updatePointsDisplay();
            updateLeaderboard();
            
            // é‡ç½®è¡¨å•
            document.getElementById('usageForm').reset();
            
            // è®¾ç½®é»˜è®¤æ—¶é—´ä¸ºå½“å‰æ—¶é—´
            const now = new Date();
            const newStartTime = new Date(now.getTime() - 60 * 60 * 1000);
            const newEndTime = now;
            
            document.getElementById('startTime').value = formatDateTimeLocal(newStartTime);
            document.getElementById('endTime').value = formatDateTimeLocal(newEndTime);
            
            // æ˜¾ç¤ºæˆåŠŸæç¤º
            showToast(`è®°å½•ä¿å­˜æˆåŠŸï¼è·å¾— ${points} ç§¯åˆ†`);
        }
        
        // æ˜¾ç¤ºæœ€è¿‘è®°å½•ï¼ˆé¦–é¡µï¼‰
        function displayRecentRecords() {
            const recentRecords = document.getElementById('recentRecords');
            const recent = records.slice(0, 5); // åªæ˜¾ç¤ºæœ€è¿‘5æ¡
            
            if (recent.length === 0) {
                recentRecords.innerHTML = `
                    <div class="empty-state">
                        <i class="fas fa-clipboard-list"></i>
                        <h3>æš‚æ— è®°å½•</h3>
                        <p>ç™»è®°ç¬¬ä¸€æ¡ä½¿ç”¨è®°å½•</p>
                    </div>
                `;
                return;
            }
            
            recentRecords.innerHTML = '';
            
            recent.forEach(record => {
                const recordItem = document.createElement('div');
                recordItem.className = 'record-item';
                recordItem.innerHTML = `
                    <div class="record-info">
                        <div class="record-user">${record.user}</div>
                        <div class="record-purpose">${record.purpose}</div>
                        <div class="record-device">${record.device}</div>
                    </div>
                    <div class="record-time">
                        <div class="record-duration">${record.duration} å°æ—¶</div>
                        <div class="record-points">+${record.points} ç§¯åˆ†</div>
                        <div class="record-date">${record.startTime.split(' ')[0]}</div>
                    </div>
                `;
                recentRecords.appendChild(recordItem);
            });
        }
        
        // æ˜¾ç¤ºæ‰€æœ‰è®°å½•
        function displayAllRecords() {
            const recordsList = document.getElementById('recordsList');
            
            if (records.length === 0) {
                recordsList.innerHTML = `
                    <div class="empty-state">
                        <i class="fas fa-clipboard-list"></i>
                        <h3>æš‚æ— ä½¿ç”¨è®°å½•</h3>
                        <p>è¯·æ·»åŠ ç¬¬ä¸€æ¡ä½¿ç”¨è®°å½•</p>
                    </div>
                `;
                return;
            }
            
            recordsList.innerHTML = '';
            
            records.forEach(record => {
                const recordItem = document.createElement('div');
                recordItem.className = 'record-item';
                recordItem.innerHTML = `
                    <div class="record-info">
                        <div class="record-user">${record.user}</div>
                        <div class="record-purpose">${record.purpose}</div>
                        <div class="record-device">${record.device}</div>
                    </div>
                    <div class="record-time">
                        <div class="record-duration">${record.duration} å°æ—¶</div>
                        <div class="record-points">+${record.points} ç§¯åˆ†</div>
                        <div class="record-date">${record.startTime}</div>
                    </div>
                `;
                recordsList.appendChild(recordItem);
            });
        }
        
        // æ›´æ–°ç»Ÿè®¡ä¿¡æ¯
        function updateStats() {
            const totalRecords = records.length;
            const totalHours = records.reduce((sum, record) => sum + parseFloat(record.duration), 0).toFixed(2);
            const avgDuration = totalRecords > 0 ? (totalHours / totalRecords).toFixed(2) : 0;
            
            // ä»Šæ—¥è®°å½•
            const today = new Date().toISOString().split('T')[0];
            const todayRecords = records.filter(record => record.date === today).length;
            
            document.getElementById('totalRecords').textContent = totalRecords;
            document.getElementById('totalHours').textContent = totalHours;
            document.getElementById('avgDuration').textContent = avgDuration;
            document.getElementById('todayRecords').textContent = todayRecords;
        }
        
        // æ›´æ–°ç§¯åˆ†æ˜¾ç¤º
        function updatePointsDisplay() {
            // è®¡ç®—å½“å‰ç”¨æˆ·çš„æ€»ç§¯åˆ†ï¼ˆè¿™é‡Œç®€å•å–ç¬¬ä¸€ä¸ªç”¨æˆ·ä½œä¸ºç¤ºä¾‹ï¼‰
            // åœ¨å®é™…åº”ç”¨ä¸­ï¼Œä½ å¯èƒ½éœ€è¦ç”¨æˆ·ç™»å½•ç³»ç»Ÿ
            const users = Object.keys(pointsData.users);
            const userPoints = users.reduce((sum, user) => sum + pointsData.users[user], 0);
            const totalPoints = userPoints + checkinData.points;
            
            document.getElementById('currentPoints').textContent = totalPoints.toFixed(1);
        }
        
        // åˆå§‹åŒ–æ’è¡Œæ¦œ
        function initLeaderboard() {
            updateLeaderboard();
        }
        
        // æ›´æ–°æ’è¡Œæ¦œ
        function updateLeaderboard() {
            const leaderboardList = document.getElementById('leaderboardList');
            
            // è·å–ç”¨æˆ·ç§¯åˆ†æ•°æ®å¹¶æ’åº
            const users = Object.keys(pointsData.users);
            if (users.length === 0) {
                leaderboardList.innerHTML = `
                    <div class="empty-state">
                        <i class="fas fa-trophy"></i>
                        <h3>æš‚æ— ç§¯åˆ†æ•°æ®</h3>
                        <p>å¼€å§‹ä½¿ç”¨è®¾å¤‡è·å–ç§¯åˆ†</p>
                    </div>
                `;
                return;
            }
            
            const sortedUsers = users.sort((a, b) => pointsData.users[b] - pointsData.users[a]);
            
            leaderboardList.innerHTML = '';
            
            sortedUsers.forEach((user, index) => {
                const rank = index + 1;
                const rankClass = rank <= 3 ? `rank-${rank}` : '';
                
                const leaderboardItem = document.createElement('div');
                leaderboardItem.className = 'leaderboard-item';
                leaderboardItem.innerHTML = `
                    <div class="leaderboard-rank ${rankClass}">${rank}</div>
                    <div class="leaderboard-info">
                        <div class="leaderboard-user">${user}</div>
                    </div>
                    <div class="leaderboard-points">${pointsData.users[user].toFixed(1)} ç§¯åˆ†</div>
                `;
                leaderboardList.appendChild(leaderboardItem);
            });
        }
        
        // åˆå§‹åŒ–å•†å“åˆ—è¡¨
        function initProducts() {
            const productsList = document.getElementById('productsList');
            
            PRODUCTS.forEach(product => {
                const productCard = document.createElement('div');
                productCard.className = 'product-card';
                productCard.innerHTML = `
                    <div class="product-icon">
                        <i class="fas ${product.icon}"></i>
                    </div>
                    <div class="product-name">${product.name}</div>
                    <div class="product-desc">${product.desc}</div>
                    <div class="product-points">${product.points} ç§¯åˆ†</div>
                    <button class="btn btn-success btn-exchange" data-id="${product.id}">
                        å…‘æ¢
                    </button>
                `;
                productsList.appendChild(productCard);
            });
            
            // æ·»åŠ å…‘æ¢äº‹ä»¶
            document.querySelectorAll('.btn-exchange').forEach(btn => {
                btn.addEventListener('click', function() {
                    const productId = parseInt(this.getAttribute('data-id'));
                    exchangeProduct(productId);
                });
            });
        }
        
        // åˆå§‹åŒ–ç§¯åˆ†è§„åˆ™
        function initRules() {
            const rulesList = document.getElementById('rulesList');
            
            Object.keys(POINTS_RULES).forEach(purpose => {
                const ruleItem = document.createElement('li');
                ruleItem.className = 'rule-item';
                ruleItem.innerHTML = `
