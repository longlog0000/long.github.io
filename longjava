    <script>
        // ç§¯åˆ†è§„åˆ™é…ç½®
        const POINTS_RULES = {
            'å·¥ä½œ': 0.5,
            'å­¦ä¹ ': 0.5,
            'å¨±ä¹': 0.5,
            'ä¼šè®®': 0.5,
            'æ¼”ç¤º': 0.5,
            'å…¶ä»–': 0.5
        };
        
        // å•†å“é…ç½®
        const PRODUCTS = [
            { id: 1, name: '15åˆ†é’Ÿé¢å¤–ä½¿ç”¨', icon: 'fa-clock', points: 10, desc: 'å…‘æ¢15åˆ†é’Ÿé¢å¤–ä½¿ç”¨æ—¶é—´' },
            { id: 2, name: 'ä¼˜å…ˆä½¿ç”¨æƒ', icon: 'fa-star', points: 20, desc: 'è·å¾—ä¸€æ¬¡ä¼˜å…ˆä½¿ç”¨è®¾å¤‡çš„æƒåˆ©' },
            { id: 3, name: 'å‘¨æœ«ç‰¹æƒ', icon: 'fa-calendar-weekend', points: 30, desc: 'å‘¨æœ«é¢å¤–ä½¿ç”¨1å°æ—¶' },
            { id: 4, name: 'æ¸¸æˆæ—¶é—´', icon: 'fa-gamepad', points: 100, desc: 'å…‘æ¢30åˆ†é’Ÿæ¸¸æˆæ—¶é—´' }
        ];
        
        // åˆå§‹åŒ–å˜é‡
        let records = JSON.parse(localStorage.getItem('deviceRecords')) || [];
        let pointsData = JSON.parse(localStorage.getItem('pointsData')) || { users: {} };
        let checkinData = JSON.parse(localStorage.getItem('checkinData')) || {
            history: [],
            consecutive: 0,
            total: 0,
            points: 0
        };
        let alarms = JSON.parse(localStorage.getItem('alarms')) || [
            { id: 1, time: '08:00', enabled: true, desc: 'æ—©ä¸Šæé†’' },
            { id: 2, time: '12:00', enabled: false, desc: 'åˆé—´æé†’' },
            { id: 3, time: '18:00', enabled: true, desc: 'æ™šé—´æé†’' }
        ];
        let reminderTime = localStorage.getItem('reminderTime') || '20:00';
        
        // DOM åŠ è½½å®Œæˆååˆå§‹åŒ–
        document.addEventListener('DOMContentLoaded', function() {
            // è®¾ç½®é»˜è®¤æ—¶é—´ä¸ºå½“å‰æ—¶é—´
            const now = new Date();
            const startTime = new Date(now.getTime() - 60 * 60 * 1000); // 1å°æ—¶å‰
            const endTime = now;
            
            document.getElementById('startTime').value = formatDateTimeLocal(startTime);
            document.getElementById('endTime').value = formatDateTimeLocal(endTime);
            
